                        if (isApprove == 1 || isApprove == 2) return;

                        $('#keyPress_DTCT').val(1);
                    });
                    CKEDITOR.instances.editorTTKH.on('fileUploadResponse', function () {
                        let isApprove = $('#txtApprove_TTKH').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        $('#keyPress_TTKH').val(1);
                    });
                    CKEDITOR.instances.editorTTKHDTK.on('fileUploadResponse', function () {
                        let isApprove = $('#txtApprove_TTKHDTK').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        $('#keyPress_TTKHDTK').val(1);
                    });
                }
            }

            // Instance of TTKHDT
            var ttkhdt = new TTKHDT();
            ttkhdt.init();
        });

