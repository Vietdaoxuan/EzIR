                            let idTTKHDTK = $('#txtID_TTKHDTK').val();
                            let menuIdTTKHDTK = $('#txtMenuID_TTKHDTK').val();
                            //let approveTTKHDTK = $('#txtApprove_TTKHDTK').val();
                            infoSheetViewModels.push({ /*Approve: approveTTKHDTK,*/ ID: idTTKHDTK, MenuID: menuIdTTKHDTK, Content: dataEditorTTKHDTK, CpnyID: @cpnyID });
                            CKEDITOR.instances.editorTTKHDTK.setReadOnly(true);
                            $('#keyPress_TTKHDTK').val(0);
                        }
                        //console.log(infoSheetViewModels);

                        if (infoSheetViewModels.length == 0) {
                            $('#loading').removeClass('loading');
                            toastr.error('@Localizer["DataHasNotBeenChanged"].Value');
                            return;
                        };

                        $.ajax({
                            url: '@Url.Action("SaveTtkhdt", "ThiTruongKhachHangDoiThu")',
                            method: 'POST',
                            dataType: 'json',
                            data: { infoSheetViewModels }
                        })
                        .done((data) => {
                            ////console.log(data);

                            $('#loading').removeClass('loading');

                            if (data.code == 0) {
                                loadData();
                                Swal.fire({
                                    html: "@Localizer["Approving"].Value",
                                    type: 'success',
                                    confirmButtonText: 'OK'
                                });
                               //toastr.success(data.message);
                                return;
                            } else {
                                return toastr.error(data.message);
                            }

                        })
                        .fail((err) => {
                            ////console.log(err);
                            $('#loading').removeClass('loading');
                        });

                    });

                    CKEDITOR.instances.editorNLDV.on('key', function () {
                        let isApprove = $('#txtApprove_NLDV').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_NLDV').val(1);
                    });

                    CKEDITOR.instances.editorCCDT.on('key', function () {
                        let isApprove = $('#txtApprove_CCDT').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_CCDT').val(1);
                    });

                    CKEDITOR.instances.editorSPTT.on('key', function () {
                        let isApprove = $('#txtApprove_SPTT').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_SPTT').val(1);
                    });

                    CKEDITOR.instances.editorDTCT.on('key', function () {
                        let isApprove = $('#txtApprove_DTCT').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_DTCT').val(1);
                    });
                    CKEDITOR.instances.editorTTKH.on('key', function () {
                        let isApprove = $('#txtApprove_TTKH').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_TTKH').val(1);
                    });
                    CKEDITOR.instances.editorTTKHDTK.on('key', function () {
                        let isApprove = $('#txtApprove_TTKHDTK').val();

                        if (isApprove == 1 || isApprove == 2) return;

                        //console.log(isApprove);

                        $('#keyPress_TTKHDTK').val(1);
                    });

                    fileUploadResponse();
                }

