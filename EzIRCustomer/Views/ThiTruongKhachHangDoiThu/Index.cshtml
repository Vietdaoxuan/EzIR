                            let dataEditorSPTT = CKEDITOR.instances.editorSPTT.getData();
                            let idSPTT = $('#txtID_SPTT').val();
                            let menuIdSPTT = $('#txtMenuID_SPTT').val();
                            //let approveSPTT = $('#txtApprove_SPTT').val();
                            infoSheetViewModels.push({ /*Approve: approveSPTT,*/ ID: idSPTT, MenuID: menuIdSPTT, Content: dataEditorSPTT, CpnyID: @cpnyID });
                            CKEDITOR.instances.editorSPTT.setReadOnly(true);
                            $('#keyPress_SPTT').val(0);
                        }

                        if (keyPress_DTCT == TTKHDT_CONFIGS.IS_KEY_PRESS) {
