                        let keyPress_SPTT = $('#keyPress_SPTT').val();
                        let keyPress_DTCT = $('#keyPress_DTCT').val();
                        let keyPress_TTKH = $('#keyPress_TTKH').val();
                        let keyPress_TTKHDTK = $('#keyPress_TTKHDTK').val();

                        let infoSheetViewModels = [];

                        if (keyPress_NLDV == TTKHDT_CONFIGS.IS_KEY_PRESS) {
                            let dataEditorNLDV = CKEDITOR.instances.editorNLDV.getData();
