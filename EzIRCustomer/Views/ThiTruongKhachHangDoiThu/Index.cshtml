                                        if (value.menuID == TTKHDT_CONFIGS.MENUID_CCDT) {
                                            $('#txtMenuID_CCDT').val(value.menuID);
                                            $('#txtID_CCDT').val(value.id);
                                            $('#txtApprove_CCDT').val(value.approve);

                                            if (!CKEDITOR.instances.editorCCDT) CreateEditor();

                                            CKEDITOR.instances.editorCCDT.setData(value.content);
                                            

                                            if (value.approve == 1 || value.approve == 2) CKEDITOR.instances.editorCCDT.setReadOnly(true);
                                        }

                                        if (value.menuID == TTKHDT_CONFIGS.MENUID_SPTT) {
                                            $('#txtMenuID_SPTT').val(value.menuID);
                                            $('#txtID_SPTT').val(value.id);
                                            $('#txtApprove_SPTT').val(value.approve);

                                            if (!CKEDITOR.instances.editorSPTT) CreateEditor();

                                            CKEDITOR.instances.editorSPTT.setData(value.content);
                                            

                                            if (value.approve == 1 || value.approve == 2) CKEDITOR.instances.editorSPTT.setReadOnly(true);
                                        }

                                        if (value.menuID == TTKHDT_CONFIGS.MENUID_DTCT) {
                                            $('#txtMenuID_DTCT').val(value.menuID);
                                            $('#txtID_DTCT').val(value.id);
                                            $('#txtApprove_DTCT').val(value.approve);

                                            if (!CKEDITOR.instances.editorDTCT) CreateEditor();

                                            CKEDITOR.instances.editorDTCT.setData(value.content);
                                            

                                            if (value.approve == 1 || value.approve == 2) CKEDITOR.instances.editorDTCT.setReadOnly(true);
                                        }

                                        if (value.menuID == TTKHDT_CONFIGS.MENUID_TTKH) {
                                            $('#txtMenuID_TTKH').val(value.menuID);
                                            $('#txtID_TTKH').val(value.id);
                                            $('#txtApprove_TTKH').val(value.approve);

                                            if (!CKEDITOR.instances.editorTTKH) CreateEditor();

                                            CKEDITOR.instances.editorTTKH.setData(value.content);
                                            

                                            if (value.approve == 1 || value.approve == 2) CKEDITOR.instances.editorTTKH.setReadOnly(true);
