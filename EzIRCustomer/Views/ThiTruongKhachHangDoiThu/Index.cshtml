                            $('#keyPress_NLDV').val(0);
                        }

                        if (keyPress_CCDT == TTKHDT_CONFIGS.IS_KEY_PRESS) {
                            let dataEditorCCDT = CKEDITOR.instances.editorCCDT.getData();
