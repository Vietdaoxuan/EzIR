                            infoSheetViewModels.push({ /*Approve: approveDTCT,*/ ID: idDTCT, MenuID: menuIdDTCT, Content: dataEditorDTCT, CpnyID: @cpnyID });
                            CKEDITOR.instances.editorDTCT.setReadOnly(true);
                            $('#keyPress_DTCT').val(0);
                        }

                        if (keyPress_TTKH == TTKHDT_CONFIGS.IS_KEY_PRESS) {
                            let dataEditorTTKH = CKEDITOR.instances.editorTTKH.getData();
                            let idTTKH = $('#txtID_TTKH').val();
                            let menuIdTTKH = $('#txtMenuID_TTKH').val();
                            //let approveTTKH = $('#txtApprove_TTKH').val();
                            infoSheetViewModels.push({ /*Approve: approveTTKH,*/ ID: idTTKH, MenuID: menuIdTTKH, Content: dataEditorTTKH, CpnyID: @cpnyID });
                            CKEDITOR.instances.editorTTKH.setReadOnly(true);
                            $('#keyPress_TTKH').val(0);
                        }

