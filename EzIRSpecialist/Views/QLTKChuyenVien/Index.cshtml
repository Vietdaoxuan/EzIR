<div id="loading"></div>
<script>
    $(document).ready(function () {
        $(".nav-item.col.gsm-link-tab").first().addClass("active");

        $('#Update').hide();

        $('#menuenterprise').hide();
        $("#stafftab").click(function () {
            console.log("click");
            $('#menustaff').show();
            $('#menuenterprise').hide();
        });
        $("#enterprisetab").click(function () {
            $('#menustaff').hide();
            $('#menuenterprise').show();
        });

        const { ['log']: c } = console;

        var renderColumns = [
            {
                data: "username",
            },
            {
                data: "fullName",
            }
            ,
            {
                data: "email",
            }
            ,
            {
                data: "emailCc",
            }
            ,
            {
                data: "activeName",
            }
            ,
            {
                data: "region",
            }
            ,
            {
                data: "createOn",
                render: function (data) {
                    return formatDateTimeToDate(data);
                }
            }
            ,
            {
                data: "note",
            }
            ,
            {
                data: "username",
                render: function (data, type, full) {
                    if (full['active'] == 1) {
                        return `<div class="d-inline-flex w-100">
                              <a class='EditAccount btn text-primary' data-id='${data}'><i class="far fa-edit"></i></a>
                              <a class='DeleteAccount btn text-primary' data-id='${data}'><i class="fas fa-delete"></i></a>
                            </div >`;
                    } else {
                        return `<div class="d-inline-flex w-100"><a class='EditAccount btn text-primary' data-id='${data}'><i class="far fa-edit"></i></a></div >`
                    }

                }
            },
        ]


        var form = $("#formSearch");

        var ChuyenVien = function () {
            this.init = function () {
                loadData(form.serialize());
                registerEvents();
            }
            var loadData = function (data) {
                $('#loading').addClass('loading');
                 $.ajax({
                    type: "GET",
                    url: '@Url.Action("ListChuyenVien", "QLTKChuyenVien")',
                    data: data,
                     success: function (data) {
                        $('#loading').removeClass('loading');
                        //console.log(data);
                        let chuyenvienTable = $('#listAccount').DataTable({
                            ordering: false,
                            dom: "lti<'d-flex pagingList justify-content-center'p>",
                            destroy: true,
                            "ordering": false,  
                            searching: false,
                            className: 'dt-body-right',
                            "bInfo": true,  ////thông tin Showing 1 to 6 of 6 entries

                            /* phân trang theo số lượng data */
                            lengthChange: true, ///thay đổi số lượng dữ liệu hiển thị
                            "lengthMenu": [10, 25, 50, 75, 100],
                            language: {
                                sLengthMenu: "_MENU_"
                            },
                            pageLength: 10,
                            data: data,
                            bAutoWidth: false,
                            columns: renderColumns
                        });

                        function editClick() {
                            $('.EditAccount').off();
                            $('.EditAccount').click(function () {
                                let accName = $(this).data('id');
                                //console.log(accName);
                                $.ajax({
                                    type: "GET",
                                    url: '@Url.Action("ListChuyenVienUpdate", "QLTKChuyenVien")?Username=' + accName,
                                    success: function (data) {
                                        if (!data.code) {
                                            $('.nav-pills > li:first-child').removeClass('active');
                                            $('.nav-pills > li:last-child').addClass('active');
                                            //$('.nav-pills > li:last-child').tab('show');
                                            jQuery('#updateTab').css('opacity', '1');
                                            $('.nav-pills > li:last-child > a').trigger('click');
                                            $("#Update").show();
                                            $("#Insert").hide();
                                            $("#FullName").val(data[0].fullName);
                                            $("#Email").val(data[0].email);
                                            $("#EmailCC").val(data[0].emailCc);
                                            $("#Phone").val(data[0].phone);
                                            //$("#RegionID").val(data[0].regionID);
                                            $("#RegionID").val(data[0].regionID).trigger('change');
                                            $("#Note").val(data[0].note);
                                            $("#userName").val(data[0].username);
                                            $("#userName").attr('readonly', 'readonly');
                                            if (data[0].active == 1) {
                                                $('#active').prop('checked', true);
                                            } else {
                                                $('#active').prop('checked', false);
                                            }

                                        }
                                        else {
                                            toastr.error(data.message);
                                        }
                                    }
                                });



                            })
                        }

                        //khi click sửa
                        editClick();
                        chuyenvienTable.on('draw', editClick);


                        function deleteClick() {
                            $('.DeleteAccount').off();
                            $('.DeleteAccount').click(function () {
                                let accName = $(this).data('id');
                                //console.log(accName);
                                Swal.fire({
                                    title: 'Thông báo',
                                    text: 'Bạn có chắc muốn xóa?',
                                    type: 'warning',
                                    cancelButtonText: 'Hủy',
                                    showCancelButton: true,
                                    confirmButtonText: 'OK'
                                }).then(result => {
                                    if (result.dismiss == "cancel" || result.dismiss == "overlay") {
                                        return;
                                    }

                                    $('#loading').addClass('loading');
                                    $.ajax({
                                        type: "POST",
                                        url: '@Url.Action("DeleteChuyenVien", "QLTKChuyenVien")?Username=' + accName,
                                        success: function (data) {
                                            $('#loading').removeClass('loading');
                                            //console.log(data);
                                            if (data.code == 0) {
                                                toastr.success(data.message);
                                            } else {
                                                toastr.error(data.message);
                                            }
                                            loadData();
                                        }
                                    });
                                })
                            })
                        }

                        //khi click xóa
                        deleteClick();
                        chuyenvienTable.on('draw', deleteClick);

                    },
                    error: function (err) {
                        console.log(err);
                        $('#loading').removeClass('loading');

                    }
                });

            }

            var registerEvents = function () {
                // Action search
                $('#btnSearch').click(function (e) {
                    e.preventDefault();
                    loadData(form.serialize())
                });

                $('body').on('click', '#Insert', function (e) {

                    e.preventDefault();

                    $('#loading').addClass('loading');
                    var form = $("#FormUpdate");
                    var Check = true;
                    // validate cho update
                    Check = Validate('insert');
                    if (Check) {
                        $.ajax({
                            url: '@Url.Action("InsertChuyenVien", "QLTKChuyenVien")',
                            type: 'POST',
                            data: $("#FormUpdate").serialize(),
                            success: function (data) {

                                $('#loading').removeClass('loading');
                                //console.log(data);
                                if (data.code == 0) {
                                    $('.nav-pills > li:first-child').addClass('active');
                                    $('.nav-pills > li:last-child').removeClass('active');
                                    jQuery('#k_tabs_1').css('opacity', '1');
                                    $('.nav-pills > li:first-child > a').trigger('click');

                                    toastr.success(data.message);
                                    $('#FormUpdate').trigger("reset");
                                    loadData();
                                } else {
                                    toastr.error(data.message);
                                }

                            },
                            error: function (err) {
                                console.log(err);

                                $('#loading').removeClass('loading');
                            }
                        })
                    } else {
                        $('#loading').removeClass('loading');
                    }

                })

                $('body').on('click', '#Reset', function (e) {
                    e.preventDefault();

                    $('#FormUpdate').trigger("reset");
                    $("#Update").hide();
                    $("#Insert").show();
                    $("#userName").attr('readonly', false);
                });


                $('body').on('click', '#Update', function (e) {

                    $('#loading').addClass('loading');
                    e.preventDefault();

                    var form = $("#FormUpdate");
                    //console.log(form.serialize());
                    var Check = true;
                    // validate cho update
                    Check = Validate('update');
                    if (Check) {
                        $.ajax({
                            url: '@Url.Action("UpdateChuyenVien", "QLTKChuyenVien")',
                            type: 'POST',
                            data: $("#FormUpdate").serialize(),
                            success: function (data) {

                                $('#loading').removeClass('loading');
                                //console.log(data);
                                if (data.code == 0) {
                                    $("#Update").hide();
                                    $("#Insert").show();
                                    $('.nav-pills > li:first-child').addClass('active');
                                    $('.nav-pills > li:last-child').removeClass('active');
                                    jQuery('#k_tabs_1').css('opacity', '1');
                                    $('.nav-pills > li:first-child > a').trigger('click');
                                    toastr.success(data.message);
                                    $('#FormUpdate').trigger("reset");
                                    $("#userName").attr('readonly', false);
                                    loadData();
                                } else {
                                    toastr.error(data.message);
                                }

                            },
                            error: function (err) {
                                console.log(err);

                                $('#loading').removeClass('loading');
                            }
                        })
                    } else {
                        $('#loading').removeClass('loading');
                    }

                })


                function Validate(i) {
                    if (i == 'insert' && $('#userName').val().length > 100) {
                        toastr.error('@SharedLocalizer["USERMANE_MAXLENGTH"]');
                        return false;
                    }
                    if ($('#userName').val() == '') {
                        toastr.error('@SharedLocalizer["AUSERNAME_Empty"]');
                        return false;
                    }
                    if (!validateUsername($('#userName').val())) {
                        toastr.error('@SharedLocalizer["AUSERNAME_NOT_IN_CORRECT_FORMAT"]');
                        return false;
                    }
                    if ($('#FullName').val() == '') {
                        toastr.error('@SharedLocalizer["AFULLNAME_Empty"]');
                        return false;
                    }
                    if ($('#FullName').val().length > 500) {
                        toastr.error('@SharedLocalizer["FULLNAME_MAXLENGTH"]');
                        return false;
                    }
                    if ($('#Email').val() == '') {
                        toastr.error('@SharedLocalizer["AEMAIL_Empty"]');
                        return false;
                    }
                    if ($('#Email').val().length > 100) {
                        toastr.error('@SharedLocalizer["EMAIL_MAXLENGTH"]');
                        return false;
                    }
                    if (!validateEmail($('#Email').val())) {
                        toastr.error('@SharedLocalizer["EMAIL_INCORRECT_FORMAT"]');
                        return false;
                    }
                    if ($('#EmailCC').val() == '') {
                        toastr.error('@SharedLocalizer["ACC_Empty"]');
                        return false;
                    }
                    if ($('#EmailCC').val().length > 100) {
                        toastr.error('@SharedLocalizer["EMAILCC_MAXLENGTH"]');
                        return false;
                    }
                    if (!validateEmail($('#EmailCC').val())) {
                        toastr.error('@SharedLocalizer["EMAIL_INCORRECT_FORMAT"]');
                        return false;
                    }
                    if ($('#Phone').val() == '') {
                        toastr.error('@SharedLocalizer["APHONE_Empty"]');
                        return false;
                    }
                    var regExp = /^[+]*[(]{0,1}[0-9]{1,3}[)]{0,1}[-\s\./0-9]*$/g;
                    if (!regExp.test($('#Phone').val())) {
                        toastr.error('@SharedLocalizer["PHONE_NOT_IN_CORRECT_FORMAT"]');
                        return false;
                    }
                    if ($('#Phone').val().length > 20) {
                        toastr.error('@SharedLocalizer["PHONE_MAXLENGTH"]');
                        return false;
                    }
                    if ($('#Note').val().length > 100) {
                        toastr.error('@SharedLocalizer["NOTE_MAXLENGTH"]');
                        return false;
                    }
                    return true;
                }

                function validateEmail(email) {
                    const re = /^(([^<>()[\]\\.,;:\s@('@')\"]+(\.[^<>()[\]\\.,;:\s@('@')\"]+)*)|(\".+\"))@('@')((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                    return re.test(email);
                }

                function validateUsername(username) {
                    const res = /^[a-zA-Z0-9]+$/.exec(username);
                    const valid = !!res;
                    return valid;
                }

            }

        }

        var chuyenvien = new ChuyenVien();
        chuyenvien.init();
    })

</script>