@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.AspNetCore.Http;
@using CoreLib.Entities;
@model List<InfoSheet>;
@inject IHtmlLocalizer<SharedResource> Localizer;
@inject IHttpContextAccessor _httpContextAccessor;
@inject Microsoft.Extensions.Configuration.IConfiguration _configuration;
@{
    ViewData["Title"] = "Tầm nhìn chiến lược";

    var img = ViewBag.imgurl;
    var data = Model.ToList();
}

<link type="text/css" href="~/lib/ckeditor/contents.css" rel="stylesheet" />

<style>
    img {
        max-height: 100%;
        max-width: 100%;
    }
</style>

<div class="k-portlet__body">
    <div class="nopadding" style="margin-bottom: 10px;">
        @*<div class="col-md-7 div-button-mobiletop" style="padding-bottom: 10px"></div>*@

        <div class="respon-mobile">

            @*Tầm nhìn*@
            @foreach (var item in data.ToList())
            {
                if (item.MenuID == 216 && item.Language == "VN")
                {
                    <div class="col-md-12 text-box-label-general mt-5" style="padding-right: 0px !important;padding-left: 0px !important;">
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="row">
                                <div class="col-md-12 text-box-label-general " style="padding-right: 0px !important;padding-left: 0px !important;">
                                    <p class="text-product-sales" for="" style="width: 100%;padding-bottom: 15px;    padding-left: 5px;">Tầm nhìn</p>
                                    @*Tầm nhìn VN*@
                                    <div class="viewapprove_outline cke_editable cke_editable_themed cke_contents_ltr cke_show_borders" style="min-height:100px">
                                        @Html.Raw(item.Content.Replace("Images/Inforsheet", img));
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.MenuID == 216 && item.Language == "US")
                {
                    <div class="col-md-12 text-box-label-general mt-5" style="padding-right: 0px !important;padding-left: 0px !important;">
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="row">
                                <div class="col-md-12 text-box-label-general " style="padding-right: 0px !important;padding-left: 0px !important;">
                                    <p class="text-product-sales" for="" style="width: 100%;padding-bottom: 15px;    padding-left: 5px;">Tầm nhìn EN</p>
                                    @*Tầm nhìn US*@
                                    <div class="viewapprove_outline cke_editable cke_editable_themed cke_contents_ltr cke_show_borders" style="min-height:100px">
                                        @Html.Raw(item.Content.Replace("Images/Inforsheet", img));
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            }

            <!-- Chiến lược -->
            @foreach (var item in data.ToList())
            {
                if (item.MenuID == 483 && item.Language == "VN")
                {
                    <div class="col-md-12 text-box-label-general mt-5" style="padding-right: 0px !important;padding-left: 0px !important;">
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="row">
                                <div class="col-md-12 text-box-label-general " style="padding-right: 0px !important;padding-left: 0px !important;">
                                    <p class="text-product-sales" for="" style="width: 100%;padding-bottom: 15px;    padding-left: 5px;">Chiến lược</p>
                                    <!-- Chiến lược vn-->
                                    <div class="viewapprove_outline cke_editable cke_editable_themed cke_contents_ltr cke_show_borders" style="min-height:100px">
                                        @Html.Raw(item.Content.Replace("Images/Inforsheet",img));
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.MenuID == 483 && item.Language == "US")
                {
                    <div class="col-md-12 text-box-label-general mt-5" style="padding-right: 0px !important;padding-left: 0px !important;">
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="row">
                                <div class="col-md-12 text-box-label-general " style="padding-right: 0px !important;padding-left: 0px !important;">
                                    <p class="text-product-sales" for="" style="width: 100%;padding-bottom: 15px;    padding-left: 5px;">Chiến lược EN</p>
                                    <!-- Chiến lược en-->
                                    <div class="viewapprove_outline cke_editable cke_editable_themed cke_contents_ltr cke_show_borders" style="min-height:100px">
                                        @Html.Raw(item.Content.Replace("Images/Inforsheet", img));
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
