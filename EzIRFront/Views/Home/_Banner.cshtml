@model EzIRFront.Models.CompanyService;

@{
    ViewData["Title"] = "Banner";

    var listbanner = ViewBag.ListBanner as List<EzIRFront.Models.Banner>;

    var logobanner = ViewBag.LogoBanner;
}

<div class="container" style="padding: 0 0 0 0 !important;">
    @*<a href="https://accounts.fpts.com.vn/Login?href=eztrade&amp;s=38" target="_blank">
        <img class="wrapper" style="padding-bottom: 0;" src="./images/banner-fpts-ezir.png">
    </a>*@
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @try
            {
                @for (int i = 0; listbanner != null && i < listbanner.Count; i++)
                {@if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="0" class="active">
                        </li>
                    }

                @if (i != 0)
                {
                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                }
            }
            }
            catch (Exception ex) { }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @try
            {
                @for (int i = 0; listbanner != null && i < listbanner.Count; i++)
                {@if (i == 0)
                    {<div class="item active">
                            <a href="@listbanner[i].Aurl" target="_blank">
                                <img class="wrapper" style="padding-bottom: 0;" src='@logobanner@listbanner[i].Alogo'>
                            </a>
                        </div>
                    }

                @if (i != 0)
                {
                    <div class="item">
                        <a href="@listbanner[i].Aurl" target="_blank">
                            <img class="wrapper" style="padding-bottom: 0;" src='@logobanner@listbanner[i].Alogo'>
                        </a>
                    </div>
                }
            }
            }
            catch (Exception ex) { }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!--Slider Desktop-->
<div class="fpts-home-thumbnail">
    <div class="fpts-home-thumbnail_top">
        <div class="row fpts_thumbnail">
            @for (int i = 0; listbanner != null && i < listbanner.Count; i++)
            {<div class="col-md-9 home-thumbnail fpts-thumbnail_">
                <a href="" data-slide="@i" style="text-decoration: none;">
                    <div class="home-thumbnail">
                        <p class="fpts-thumbnail_title">@listbanner[i].Atitle</p>
                    </div>
                </a>
            </div>
            }
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $("#myCarousel").carousel({ interval: 2500 });
        });
    </script>
